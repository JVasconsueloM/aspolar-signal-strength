<?xml version="1.0" encoding="UTF-8"?>
<plugin id="com.aspolar.plugin.SignalStrength" version="0.7.1"
        xmlns="http://apache.org/cordova/ns/plugins/1.0"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <name>Signal Strength</name>

    <engines>
        <engine name="cordova" version=">=3.0.0"/>
    </engines>
    
    <asset src="www/SignalStrength.js" target="js/SignalStrength.js"/>

    <js-module name="SignalStrength" src="www/SignalStrength.js">
        <clobbers target="window.plugins.SignalStrength"/>
    </js-module>

    <!-- android -->
    <platform name="android">

        <config-file parent="/*" target="res/xml/config.xml">
            <feature name="SignalStrength">
                <param name="android-package" value="com.aspolar.plugin.SignalStrength"/>
                <param name="onload" value="true" />
            </feature>
        </config-file>

        <!-- <source-file src="src/com/aspolar/plugin/MyPhoneStateListener.java" target-dir="src/com/aspolar/plugin"/> -->
        <source-file src="src/com/aspolar/plugin/SignalStrength.java" target-dir="src/com/aspolar/plugin/SignalStrength"/>
    </platform>
</plugin>