<?xml version="1.0" encoding="UTF-8"?>
<plugin id="cordova-plugin-aspolarsignalstrength" version="0.0.1"
        xmlns="http://apache.org/cordova/ns/plugins/1.0"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <name>Aspolar Signal Strength</name>
    <description>An Android Cordova plugin to get Signal Strength.</description>
    <license>MIT</license>
    <keywords>cordova,android,signal,strength</keywords>
    <repo>https://github.com/JVasconsueloM/aspolar-signal-strength.git</repo>
    <issue>https://github.com/JVasconsueloM/aspolar-signal-strength/issues</issue>
    <engines>
        <engine name="cordova" version=">=3.0.0"/>
    </engines>
    <js-module name="SignalStrength" src="www/SignalStrength.js">
        <clobbers target="window.plugins.signalStrength"/>
    </js-module>

    <!-- android -->
    <platform name="android">
        <config-file parent="/*" target="res/xml/config.xml">
            <feature name="SignalStrength">
                <param name="android-package" value="org.apache.cordova.SignalStrength"/>
            </feature>
        </config-file>
        <source-file src="src/android/MyPhoneStateListener.java" target-dir="src/org/apache/cordova/SignalStrength"/>
        <source-file src="src/android/SignalStrength.java" target-dir="src/org/apache/cordova/SignalStrength"/>
    </platform>
</plugin>